<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kgc.entity.Student" table="student" schema="school">
        <id name="sid">
            <column name="sid" sql-type="int(4)"/>
        </id>
        <property name="sname">
            <column name="sname" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="sage">
            <column name="sage" sql-type="int(4)" not-null="true"/>
        </property>
        <property name="saddress">
            <column name="saddress" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>